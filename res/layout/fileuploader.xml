<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   		android:id="@+id/internal_storage_section"
   		android:layout_width="fill_parent"
   		android:layout_height="wrap_content"
        android:layout_weight="1"
   		height="0"
    	android:orientation="vertical"
    	>
	    <TextView android:id="@+id/title_internal_storage"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/title_internal_storage"
	        android:background="#777"
	        android:textColor="#fff"
	        android:paddingLeft="5dp"
	    />
	    <ListView android:id="@+id/internal_storage"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	    />
	    <Button android:id="@+id/btn_upload_all_internal"
	        android:text="@string/btn_upload_all"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        style="@style/btn"
	        android:visibility="gone"
	    />
    </LinearLayout>
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:id="@+id/external_storage_section"
    	android:layout_width="fill_parent"
   		android:layout_height="wrap_content"
        android:layout_weight="1"
   		height="0"
    	android:orientation="vertical"
    	>
	    <TextView android:id="@+id/title_external_storage"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/title_external_storage"
	        android:background="#777"
	        android:textColor="#fff"
	        android:paddingLeft="5dp"
	    />
	    <ListView android:id="@+id/external_storage"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	    />
	    <Button android:id="@+id/btn_upload_all_external"
	        android:text="@string/btn_upload_all"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        style="@style/btn"
	        android:visibility="gone"
	    />
	</LinearLayout>
	
	<Button 
		android:id="@+id/btn_close" 
		android:text="@string/btn_close"
		style="@style/btn" 
		/>
</LinearLayout>
