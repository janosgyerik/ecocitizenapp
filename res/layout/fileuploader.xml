<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

	<LinearLayout android:id="@+id/internal_storage_section"
		style="@style/weighted_list_section">
		<TextView android:text="@string/title_internal_storage"
			style="@style/list_title" />
		<ListView android:id="@+id/internal_storage" style="@style/fill_width" />
		<Button android:id="@+id/btn_upload_all_internal" 
			android:visibility="gone"
			style="@style/btn"
			/>
    </LinearLayout>

	<LinearLayout android:id="@+id/external_storage_section"
		style="@style/weighted_list_section">
		<TextView android:text="@string/title_external_storage"
			style="@style/list_title" />
		<ListView android:id="@+id/external_storage" style="@style/fill_width" />
		<Button android:id="@+id/btn_upload_all_external" 
			android:visibility="gone"
			style="@style/btn"
			/>
	</LinearLayout>

	<Button android:id="@+id/btn_close" android:text="@string/btn_close"
		style="@style/fill_width" />
</LinearLayout>
