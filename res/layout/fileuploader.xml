<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
        <LinearLayout  android:orientation="vertical"
                 android:layout_width="fill_parent"
                  android:layout_height="fill_parent"> 
                  <TextView android:text="@string/File_Saver_Internal"  android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                  <ListView android:id="@+id/internalFilelist"
    	            android:layout_width="fill_parent"
    	            android:layout_height="fill_parent"
    	            android:stackFromBottom="true"
                    android:transcriptMode="alwaysScroll"
                    android:layout_weight="1"
                  /> 
                  <TextView android:text="@string/File_Saver_External"  android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <ListView android:id="@+id/externalFilelist"
    	            android:layout_width="fill_parent"
    	            android:layout_height="fill_parent"
    	            android:stackFromBottom="true"
                    android:transcriptMode="alwaysScroll"
                    android:layout_weight="1"
                  /> 
                  <TextView android:text="@string/msg_file_uploader"  android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                  <Button android:id="@+id/btn_uploader" android:text="@string/btn_uploader"  android:stackFromBottom="true" style="@style/btn"/>
            </LinearLayout>
    </LinearLayout>    
