<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background1"
    android:id="@+id/treepage"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="horizontal" 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content" 
    	android:id="@+id/co2"
    	>
    	<TextView android:id="@+id/co2name"
    		style="@style/co2NameMetric"
    		android:gravity="center"
    		android:layout_weight="1"
    		android:paddingTop="50px"
		/>
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:orientation="vertical"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:id="@+id/co2Val"
    		android:gravity="top"
    		>
    		<TextView android:id="@+id/co2val_1"
    			style="@style/co2Val"
    			android:gravity="center"
			/>
			<TextView android:id="@+id/co2val_2"
    			style="@style/co2Val"
    			android:paddingTop="0px"
    			android:textSize="0px"
    			android:gravity="center"
			/>
		</LinearLayout>
		<TextView android:id="@+id/co2metric"
    		style="@style/co2NameMetric"
    		android:gravity="center"
    		android:layout_weight="1"
		/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="horizontal" 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content" 
    	android:id="@+id/latlon"
    	>
    	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:orientation="horizontal"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:gravity="center"
    		android:layout_weight="1"
    		>
    		<TextView android:id="@+id/latname" style="@style/latlon" />
    		<TextView android:id="@+id/latval" style="@style/latlon" />
    	</LinearLayout>
    	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:orientation="horizontal"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:gravity="center"
    		android:layout_weight="1"
    		>
    		<TextView android:id = "@+id/lonname"
    			style="@style/latlon"
    		/>
    		<TextView android:id="@+id/lonval"
    			style="@style/latlon"
    		/>
    	</LinearLayout>

    </LinearLayout>
    <ListView android:id="@+id/vspace"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_weight="1"
    />
    <ImageButton android:id="@+id/btn_comment"
    	android:src="@drawable/comment"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
		android:layout_gravity="right"
    	android:stackFromBottom="true"
    />
    <Button android:id="@+id/btn_connect_device"
		android:text="@string/btn_connect_device"
    	android:stackFromBottom="true"
		style="@style/wideButton"
		android:layout_gravity="center"
    />
    <Button android:id="@+id/btn_disconnect_device"
		android:text="@string/btn_disconnect_device"
    	android:stackFromBottom="true"
		style="@style/wideButton"
    />
    <Button android:id="@+id/btn_test"
		android:text="Fire Test"
    	android:stackFromBottom="true"
    	android:visibility="gone"
		style="@style/wideButton"
    />
</LinearLayout>
