<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
	<TableLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:stretchColumns="1"
		>
		<TableRow>
		    <TextView 
		    	android:text="@string/fileinfo_filename"
				style="@style/fileInfoLabelCol" 
			/>
		    <TextView 
		    	android:id="@+id/fileinfo_filename"
			/>
		</TableRow>

		<TableRow>
		    <TextView 
		    	android:text="@string/fileinfo_date"
				style="@style/fileInfoLabelCol" 
			/>
		    <TextView 
		    	android:id="@+id/fileinfo_date"
			/>
		</TableRow>
		
		<TableRow>
		    <TextView 
		    	android:text="@string/fileinfo_size"
				style="@style/fileInfoLabelCol" 
			/>
		    <TextView 
		    	android:id="@+id/fileinfo_size"
			/>
		</TableRow>

		<TableRow>
		    <TextView 
		    	android:text="@string/fileinfo_recordnum"
				style="@style/fileInfoLabelCol" 
			/>
		    <TextView 
		    	android:id="@+id/fileinfo_recordnum"
			/>
		</TableRow>
	</TableLayout>
	
	<TextView
		android:id="@+id/fileinfo_content"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:scrollbars="horizontal"
		android:scrollHorizontally="true"
	/>

	<Button 
		android:id="@+id/btn_delete"
		android:text="@string/btn_delete"
		style="@style/btn" 
		android:visibility="gone"
	/>
	
	<Button 
		android:id="@+id/btn_upload"
		android:text="@string/btn_upload"
		style="@style/btn" 
		android:visibility="gone"
	/>
	
	<Button 
		android:id="@+id/btn_close" 
		android:text="@string/btn_close"
		style="@style/btn" 
	/>
</LinearLayout>