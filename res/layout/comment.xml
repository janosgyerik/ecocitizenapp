<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TableLayout android:id="@+id/tblcomment" style="@style/tabular">
		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:text="Year" style="@style/tabularColumn"></TextView>
			<TextView android:text="Month" style="@style/tabularColumn"></TextView>
			<TextView android:text="Day" style="@style/tabularColumn"></TextView>
			<TextView android:text="Hour" style="@style/tabularColumn"></TextView>
			<TextView android:text="Minute" style="@style/tabularColumn"></TextView>
		</TableRow>

		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/comment_year" style="@style/tabularValueColumn"></TextView>
			<TextView android:id="@+id/comment_month" style="@style/tabularValueColumn"></TextView>
			<TextView android:id="@+id/comment_day" style="@style/tabularValueColumn"></TextView>
			<Spinner android:id="@+id/hour_spinner"
				android:layout_height="wrap_content" android:layout_width="wrap_content"></Spinner>
			<Spinner android:id="@+id/minute_spinner"
				android:layout_height="wrap_content" android:layout_width="wrap_content"></Spinner>
		</TableRow>
	</TableLayout>
	<EditText android:id="@+id/comment_text" android:lines="3"
		android:layout_height="wrap_content" android:layout_width="fill_parent"></EditText>
	<Button android:id="@+id/btn_comment" android:text="@string/btn_comment"
		android:stackFromBottom="true" style="@style/btn" />
</LinearLayout>
