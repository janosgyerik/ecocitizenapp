<LinearLayout android:id="@+id/linearLayout1"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/background2" android:orientation="vertical">

	<TableLayout android:id="@+id/boxes" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TableRow android:id="@+id/boxRow1" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<include android:id="@+id/boxtop_left" layout="@layout/box"
				android:layout_weight="1" />
			<include android:id="@+id/boxtop_right" layout="@layout/box"
				android:layout_weight="1" />
		</TableRow>
		<TableRow android:id="@+id/boxRow1" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<include android:id="@+id/boxbottom_left" layout="@layout/box"
				android:layout_weight="1" />
			<include android:id="@+id/boxbottom_right" layout="@layout/box"
				android:layout_weight="1" />
		</TableRow>
	</TableLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:paddingTop="5px"
		android:gravity="center" android:id="@+id/t_rh">
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView android:id="@+id/T_name" android:text="T"
				style="@style/recordTRH" />
			<TextView android:text="=" style="@style/recordTRH" />
			<TextView android:id="@+id/T_val" style="@style/recordTRH" />
			<TextView android:id="@+id/T_metric" android:text=" grad C"
				style="@style/recordTRH" />
		</LinearLayout>
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:orientation="horizontal" android:layout_marginLeft="20px">
			<TextView android:id="@+id/RH_name" android:text="RH"
				style="@style/recordTRH" />
			<TextView android:text="=" style="@style/recordTRH" />
			<TextView android:id="@+id/RH_val" style="@style/recordTRH" />
			<TextView android:id="@+id/RH_metric" android:text="%"
				style="@style/recordTRH" />
		</LinearLayout>
	</LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:paddingTop="5px"
		android:gravity="center" android:id="@+id/latlon">
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView android:text="lat." style="@style/recordlatlon" />
			<TextView android:text="=" style="@style/recordlatlon" />
			<TextView android:id="@+id/lat_val" style="@style/recordlatlon" />
			<TextView android:id="@+id/lat_metric" android:text=""
				style="@style/recordlatlon" />
		</LinearLayout>
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="horizontal" android:layout_marginLeft="20px">
			<TextView android:text="long." style="@style/recordlatlon" />
			<TextView android:text="=" style="@style/recordlatlon" />
			<TextView android:id="@+id/lon_val" style="@style/recordlatlon" />
			<TextView android:id="@+id/lon_metric" android:text=""
				style="@style/recordlatlon" />
		</LinearLayout>
	</LinearLayout>

	<ListView android:id="@+id/vspace" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_weight="1" />

	<Button android:id="@+id/btn_connect_device" android:text="@string/btn_connect_device"
		android:stackFromBottom="true" style="@style/btn" />
	<Button android:id="@+id/btn_disconnect_device" android:text="@string/btn_disconnect_device"
		android:stackFromBottom="true" android:visibility="gone" style="@style/btn" />
</LinearLayout>