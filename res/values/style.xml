<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="co2" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    	<item name="android:paddingTop">30px</item>
    	<item name="android:textSize">48px</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="btn" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#222</item>
        <item name="android:layout_gravity">bottom</item>
    </style>
    
    <style name="latlon" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">#ee0</item>
    	<item name="android:paddingLeft">10px</item>
    </style>
    
    <style name="tabular" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_gravity">center</item>
        <item name="android:baselineAligned">true</item>
        <item name="android:drawingCacheQuality">auto</item>
        <item name="android:layout_width">fill_parent</item>
    	<item name="android:stretchColumns">*</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    
    <style name="tabularValueColumn" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">right</item>
        <item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:padding">3dip</item>
    	<item name="android:textColor">#ee0</item>
    </style> 
    
    <style name="tabularColumn" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:padding">3dip</item>
    	<item name="android:textColor">#ff0000</item>
    </style>
    
    
</resources>
